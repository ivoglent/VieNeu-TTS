# Tên của Docker Image
IMAGE_NAME=vieneu-tts

# Tag của Docker Image
IMAGE_TAG=latest

# Port ứng dụng (Host) - API Server
PORT=8000

# Config cho HuggingFace
# HF_TOKEN=hf_... 

# Config cho System
# UID/GID để mapping quyền file (nếu cần trên Linux)
# USER_ID=1000
# GROUP_ID=1000



HF_HOME=/root/.cache/huggingface
PYTHONUNBUFFERED=1
PHONEMIZER_ESPEAK_LIBRARY=/usr/lib/x86_64-linux-gnu/libespeak-ng.so.1

# API Server Config
API_HOST=0.0.0.0
API_PORT=8000

# TTS Model Config
# MODEL_TYPE: "pytorch" for standard PyTorch model, "gguf" for quantized llama.cpp model
# IMPORTANT: Set MODEL_TYPE=gguf when using GGUF models!
MODEL_TYPE=pytorch
DEVICE=cuda
BACKBONE_REPO=pnnbao-ump/VieNeu-TTS

# For GGUF quantized model, use these settings:
# MODEL_TYPE=gguf
# BACKBONE_REPO=pnnbao-ump/VieNeu-TTS-q8-gguf

CODEC_REPO=neuphonic/neucodec
MAX_BATCH_SIZE=8
ENABLE_TRITON=true